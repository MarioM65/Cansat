<Window x:Class="APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sensores" Height="450" Width="800">
    <Grid>
        <TabControl>
            <!-- Aba Inicial -->
            <TabItem Header="Início">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding SensoresRecentes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10" Padding="10" BorderBrush="Gray" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Tipo}" FontWeight="Bold" FontSize="16" />
                                        <TextBlock Text="{Binding Grandeza}" />
                                        <TextBlock Text="Valor: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding valor}" />
                                        <TextBlock Text="{Binding medido_em}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!-- Aba de Gráficos -->
            <TabItem Header="Gráficos">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding SensoresAgrupados}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10">
                                    <TextBlock Text="{Binding Tipo}" FontWeight="Bold" FontSize="16" />
                                    <!-- Gráfico aqui -->
                                    <ItemsControl ItemsSource="{Binding Sensores}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding medido_em} - {Binding valor}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
